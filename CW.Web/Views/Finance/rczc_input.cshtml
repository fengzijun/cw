                    { "abbr": "主营业务税金及附加", "name": "主营业务税金及附加" },
                    { "abbr": "企业所得税", "name": "企业所得税" }


                ]
    });

    var maintypestore = new Ext.data.Store({

        fields: ['abbr', 'name'],
        data: [
                    { "abbr": "银行支出", "name": "银行支出" },
                    { "abbr": "现金支出", "name": "现金支出" }


                ]
    });

    var gstore = Ext.create('Ext.data.Store', {
        model: 'businessdetail',
        data: []
    });

    var columns = [//配置表格列  

                {header: "摘要", width: 120, dataIndex: "remark" },
                { header: "金额", width: 120, dataIndex: "money" },
                { header: "报销类型", width: 120, dataIndex: "type" },
                { header: "费用类型", width: 120, dataIndex: "maintype" },
                { header: "备注", width: 120, dataIndex: "other" }


                ];

                Ext.onReady(function () {
                    var grid = Ext.create('Ext.grid.Panel', {
                        frame: false,
                        forceFit: true,
                        columnLines: true,
                        title: "额外信息",
                        store: gstore,
                        selModel: Ext.create('Ext.selection.CheckboxModel'),
                        tbar: [{
                            xtype: 'button',
                            text: '新增',
                            handler: add,
                            iconCls:"Applicationadd"

                        }, {
                            xtype: 'button',
                            text: '删除',
                            iconCls: "Applicationdelete",
                            handler: del
                        }],
                        columns: columns

                    });

                    var top = Ext.widget({
                        xtype: 'form',
                        id: 'multiColumnForm',
                        collapsible: true,
                        frame: true,
                        title: '日常支出录入',
                        bodyPadding: '5 5 0',
                        renderTo: 'main',

                        bodyBorder: 0,
                        fieldDefaults: {
                            labelWidth: 80
                        },
                        defaults: {
                            margins: '0 0 10 0'
                        },
                        items: [{
                            xtype: 'fieldcontainer',
                            layout: 'hbox',
                            defaultType: 'textfield',
                            fieldDefaults: {
                                labelAlign: 'left'
                            },
                            defaults: {
                                type: 'vbox',
                                padding: '5',
                                align: 'left'
                            },
                            bodyPadding: '5 5 0',
                            items: [{
                                flex: 1,
                                name: 'company',
                                fieldLabel: '所属公司',
                                xtype: 'combo',
                                store: companystore,
                                queryMode: 'local',
                                displayField: 'name',
                                valueField: 'abbr',
                                flex: 1,
                                value: "昆山易得",
                                forceSelection: true

                            }, {
                                name: 'time',
                                fieldLabel: '报销时间',
                                flex: 1,
                                xtype: "datefield",
                                allowBlank: false

                            }, {
                                flex: 1,
                                name: 'orderuser',
                                fieldLabel: '制单人',
                                allowBlank: false

                            }]
                        }, grid],

                        buttons: [{
                            text: '保存',
                            iconCls: "Application",
                            handler: function () {
                                if (this.up('form').getForm().isValid()) {
                                    //alert(Ext.JSON.encode(this.up('form').getForm().getValues()));
                                    var temp = {};
                                    var self = this;
                                    temp.commonpayment = {};
                                    var orderFrom = Ext.ComponentQuery.query('#multiColumnForm [name=company]');
                                    temp.commonpayment.company = orderFrom[0].getValue();
                                    orderFrom = Ext.ComponentQuery.query('#multiColumnForm [name=time]');
                                    temp.commonpayment.time = Ext.Date.format(new Date(orderFrom[0].getValue()), 'Y-m-d H:i:s');
                                    orderFrom = Ext.ComponentQuery.query('#multiColumnForm [name=orderuser]');
                                    temp.commonpayment.orderuser = orderFrom[0].getValue();


                                    temp.commonpaymentdetails = [];

                                    gstore.each(function (rec) {
                                        var detailobject = {};
                                        detailobject.money = rec.get("money");
                                        detailobject.type = rec.get("type");
                                        detailobject.remark = rec.get("remark");
                                        detailobject.other = rec.get("other");
                                        detailobject.maintype = rec.get("maintype");
                                        temp.commonpaymentdetails.push(detailobject);
                                    })


                                    $.ajax({
                                        url: '/Finance/rczc_inputpost',
                                        type: 'POST',
                                        dataType: 'json',
                                        data: $.toJSON({ data: temp }),
                                        contentType: 'application/json; charset=utf-8',
                                        success: function (data) {

                                        }
                                    }).done(function (data) {
                                        if (data.Result) {
                                            showsucmsg(data.Msg);
                                            self.up('form').getForm().reset();
                                            gstore.removeAll();
                                        }
                                        else {
                                            showsucmsg(data.Msg);
                                        }
                                    });


                                }
                            }
                        }, {
                            text: '重置',
                            iconCls: "Cancel",
                            handler: function () {
                                this.up('form').getForm().reset();
                                gstore.removeAll();
                            }
                        }]
                    });

                    //        fields: ['ID', 'name','company','kpname','sh','address','tel','bank','account'],

                    function add() {
                        var grid = Ext.getCmp("detailgrid");

                        var form = Ext.create('Ext.panel.Panel', {
                            border: 0,
                            id: 'userpanel',
                            bodyPadding: 5,
                            autoScroll: true,
                            layout: {
                                type: 'vbox',       // Arrange child items vertically
                                align: 'stretch',    // Each takes up full width
                                padding: 5
                            },

                            items: [{
                                fieldLabel: '金额',
                                name: "money",
                                xtype: 'textfield'
                            }, {
                                fieldLabel: '报销类型',
                                name: "type",
                                xtype: 'combo',
                                store: typestore,
                                queryMode: 'local',
                                displayField: 'name',
                                valueField: 'abbr',
                                flex: 1,
                                value: "营业费用",
                                forceSelection: true
                            }, {
                                fieldLabel: '费用类型',
                                name: "maintype",
                                xtype: 'combo',
                                store: maintypestore,
                                queryMode: 'local',
                                displayField: 'name',
                                valueField: 'abbr',
                                flex: 1,
                                value: "现金支出",
                                forceSelection: true
                            }, {
                                fieldLabel: '摘要',
                                name: "remark",
                                xtype: 'textfield'
                            }, {
                                fieldLabel: '备注',
                                name: "other",
                                xtype: 'textfield'
                            }]
                        });

                        var win = Ext.create('Ext.window.Window', {
                            title: '新建额外信息',
                            collapsible: true,
                            animCollapse: true,
                            maximizable: true,
                            width: 400,
                            height: 250,
                            minWidth: 300,
                            minHeight: 200,
                            autoScroll: true,
                            layout: 'fit',
                            items: form,
                            dockedItems: [{
                                xtype: 'toolbar',
                                dock: 'bottom',
                                ui: 'footer',
                                layout: {
                                    pack: 'center'
                                },
                                items: [{
                                    minWidth: 80,
                                    text: '保存',
                                    handler: addinfo
                                }, {
                                    minWidth: 80,
                                    text: '取消',
                                    handler: function () {
                                        win.close();
                                    }
                                }]
                            }]
                        });

                        win.show();

                        function addinfo() {
                            var orderFrom = Ext.ComponentQuery.query('#userpanel [name=money]');
                            var money = orderFrom[0].getValue();
                            orderFrom = Ext.ComponentQuery.query('#userpanel [name=type]');
                            var type = orderFrom[0].getValue();
                            orderFrom = Ext.ComponentQuery.query('#userpanel [name=remark]');
                            var remark = orderFrom[0].getValue();
                            orderFrom = Ext.ComponentQuery.query('#userpanel [name=other]');
                            var other = orderFrom[0].getValue();
                            orderFrom = Ext.ComponentQuery.query('#userpanel [name=maintype]');
                            var maintype = orderFrom[0].getValue();
                            gstore.add({ ID: guid(), businessid: '', money: money, type: type, remark: remark, other: other, maintype: maintype });

                            win.close();
                        }
                    }

                    function del() {

                        var records = grid.getSelectionModel().getSelection();
                        if (records.length > 0) {
                            var ids = [];
                            gstore.remove(records);
                        }
                        else {
                            showerrormsg("请选择一行数据");
                        }

                    }

                });
   


